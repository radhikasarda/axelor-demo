<action-validate name="action-validate-on-add-project">
 <alert message="End Date is Gone. Would you like to continue?" if="endDate &lt; __date__"/>
 <alert message="Start Date is Gone. Would you like to continue?" if="startDate &lt; __date__"/>
</action-validate>
</object-views>